{
  "name": "wordpress/responsive",
  "type": "package",
  "description": "Responsive Theme is a flexible foundation with fluid grid system that adapts your website to mobile devices.",
  "keywords": [
    "WordPress",
    "Themes"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "CyberChimps",
      "homepage": "https://www.cyberchimps.com"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "wptrt/wpthemereview": "^0.2.0",
    "wp-coding-standards/wpcs": "2.2.0"
  },
  "scripts": {
    "checkphpcs": "phpcs --standard=phpcs.xml.dist --report-full --report-summary -p --colors",
    "fixcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --runtime-set testVersion 5.6-"
  }
}